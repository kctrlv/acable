<!DOCTYPE html>
<html>
  <head>
    <title>Acable</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <span>Welcome, <%= current_user.name %>!</span>
      <%= link_to "Logout", logout_path %>
    <% end %>

    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %>">
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
